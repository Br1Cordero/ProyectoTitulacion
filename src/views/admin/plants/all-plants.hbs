<div class="center">
    {{#each plants}}

    <article class="form card">
        <h2 class="form__title">{{name}} <a href="/plants/edit/{{_id}}"><i class="fa-solid fa-edit"></i></a></h2>
        <p>{{description}}</p>
        {{#each plague}}
            <p>{{this}}</p>
        {{/each}}
        <form action="/plants/delete/{{_id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <section class="form__group form__group-btn">
                <button type="submit" class="form__btn  danger"> Eliminar</button>
            </section>
        </form>
    </article>

    
    {{/each}}

</div>
